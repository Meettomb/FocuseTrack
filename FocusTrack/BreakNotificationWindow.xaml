<Window x:Class="FocusTrack.BreakNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#AA333333"
        Topmost="True"
        ShowInTaskbar="False"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Width="300"
        Height="100"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border CornerRadius="10" Background="#FF2D2D30" Opacity="0.9" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon x:Name="Clock"
                                                 Kind="Clock"
                                                 Grid.Column="0"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Width="22"
                                                 Height="22"
                                                 Foreground="red"
                                                 Margin="0 0 15 0"/>
                        <TextBlock Text=" Break Time!" 
                                                 Grid.Column="1"
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="Time to take a short break." 
                           Grid.Row="1"
                           FontSize="14" 
                           Foreground="White" 
                               Margin="0 10 0 0"
                           HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
