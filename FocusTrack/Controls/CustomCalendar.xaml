<UserControl x:Class="FocusTrack.Controls.CustomCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="350" Height="400">
    <Border Background="#222" CornerRadius="8" Padding="10">
        <StackPanel>
            <!-- Header with Month/Year and navigation -->
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Click="PrevMonth_Click"
                        Width="30" Height="30" Background="Transparent" BorderThickness="0">
                    <materialDesign:PackIcon Kind="ChevronLeft" Foreground="White" Width="24" Height="24"/>
                </Button>
                <TextBlock Grid.Column="1" Text="{Binding DisplayMonth, RelativeSource={RelativeSource AncestorType=UserControl}}" 
           Foreground="White" FontSize="16" HorizontalAlignment="Center"/>

                <Button Grid.Column="2" Click="NextMonth_Click"
                        Width="30" Height="30" Background="Transparent" BorderThickness="0">
                    <materialDesign:PackIcon Kind="ChevronRight" Foreground="White" Width="24" Height="24"/>
                </Button>
            </Grid>

            <!-- Day names -->
            <UniformGrid Rows="1" Columns="7" Margin="0 0 0 5">
                <TextBlock Text="Sun" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Mon" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Tue" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Wed" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Thu" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Fri" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Sat" Foreground="White" HorizontalAlignment="Center"/>
            </UniformGrid>

            <!-- Days grid -->
            <UniformGrid x:Name="DaysGrid" Rows="6" Columns="7"/>
        </StackPanel>
    </Border>
</UserControl>
