<UserControl x:Class="FocusTrack.Controls.VpnAlert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FocusTrack.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Header row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top header: icon + title + close button -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="*"/>
                <!-- Title -->
                <ColumnDefinition Width="Auto"/>
                <!-- Close button -->
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <materialDesign:PackIcon Grid.Column="0"
                          Kind="AlertCircleOutline" 
                          Width="28" Height="28" 
                          Foreground="#FFCC00"
                          VerticalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Grid.Column="1"
                Text="VPN Tracking Disabled"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White"
                VerticalAlignment="Center"
                Margin="8,0,8,0"
                TextWrapping="Wrap"/>

            <!-- Close button -->
            <Button Grid.Column="2"
             Click="CloseButton_Click"
                 Style="{StaticResource ClosePopup}">
            </Button>
        </Grid>


        <!-- Main content -->
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0">

            <TextBlock Text="VPN tracking is currently turned off. Apps listed below will not be monitored for activity." 
               TextWrapping="Wrap"
               FontSize="15" Foreground="LightGray" Margin="0,10,0,15"
               TextAlignment="Center"/>

            <!-- Two-column Grid Layout -->
            <Grid Margin="0,10,0,20">

                <StackPanel>
                    <TextBlock x:Name="VpnListTextBlock"
                   FontSize="14"
                   Foreground="White"
                   TextWrapping="Wrap"
                    FontWeight="Bold"/>
                </StackPanel>


            </Grid>

            <Button Content="OK"
            Style="{StaticResource PrimaryButtonStyle}"
            Width="120"
            Height="35"
            Click="OkButton_Click"/>
        </StackPanel>

    </Grid>

</UserControl>
