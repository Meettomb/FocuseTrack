<UserControl x:Class="FocusTrack.Controls.PrivateModeAlert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid>
        <!-- Header row -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top header: icon + title + close button -->
        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="*"/>
                <!-- Title -->
                <ColumnDefinition Width="Auto"/>
                <!-- Close button -->
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <materialDesign:PackIcon Grid.Column="0"
                             Kind="AlertCircleOutline" 
                             Width="28" Height="28" 
                             Foreground="#FFCC00"
                             VerticalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Grid.Column="1"
               Text="Private Mode Detected"
               FontSize="16"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"
               Margin="8,0,8,0"
               TextWrapping="Wrap"/>

            <!-- Close button -->
            <Button Grid.Column="2"
                Click="CloseButton_Click"
                    Style="{StaticResource ClosePopup}">
            </Button>
        </Grid>


        <!-- Main content -->
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0">

            <TextBlock Text="Tracking is disabled in Private/Incognito mode. Activity in these browsers will not be monitored to protect your privacy." 
                           TextWrapping="Wrap"
                           FontSize="15" Foreground="LightGray" Margin="0,10,0,15"
                           TextAlignment="Center"/>

            <StackPanel Margin="0,10,0,20">
                <TextBlock Text="• Microsoft Edge" FontSize="14" Foreground="White"/>
                <TextBlock Text="• Mozilla Firefox" FontSize="14" Foreground="White"/>
                <TextBlock Text="• Internet Explorer" FontSize="14" Foreground="White"/>
                <TextBlock Text="• Tor Browser" FontSize="14" Foreground="White"/>
            </StackPanel>

            <Button Content="OK"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="120"
                        Height="35"
                        Click="OkButton_Click"
                    FontWeight="Bold"/>
        </StackPanel>

    </Grid>
    
</UserControl>
