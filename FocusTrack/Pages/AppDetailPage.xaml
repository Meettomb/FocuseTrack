<Page x:Class="FocusTrack.Pages.AppDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="AppDetailPage">

    <Grid Background="#333" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="0, 12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <Border Padding="4" Grid.Column="0" 
        Cursor="Hand" 
                    Margin="10 0 0 0"
        MouseLeftButtonDown="BackIcon_MouseLeftButtonDown"
        Background="Transparent">
                <materialDesign:PackIcon Kind="ChevronLeft"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Width="40"
                             Height="40"
                             Foreground="White"
                             IsHitTestVisible="False"/>
            </Border>




            <TextBlock Text="App Usage Details"
               FontSize="24"
               Foreground="White"
               FontWeight="Bold"
               Margin="0"
               Grid.Column="1"
               VerticalAlignment="Center"/>
        </Grid>


       
            <!-- Scrollable ItemsControl -->
        <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Visible"
              HorizontalScrollBarVisibility="Hidden"
              CanContentScroll="True"
              Padding="10">

            <ScrollViewer.Resources>
                <!-- Vertical ScrollBar Style with Rounded Thumb -->
                <Style TargetType="ScrollBar" x:Key="VerticalScrollBarStyle">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Width" Value="0"/>
                    <!-- Thin scrollbar -->
                    <Setter Property="Foreground" Value="#888"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid Background="{TemplateBinding Background}">
                                    <Track Name="PART_Track" IsDirectionReversed="true">
                                        <Track.Thumb>
                                            <Thumb BorderThickness="0">
                                                <!-- Rounded thumb using Border -->
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border Background="#555"
                                                    CornerRadius="5"/>
                                                        <!-- Rounded corners -->
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                                <Thumb.Style>
                                                    <Style TargetType="Thumb">
                                                        <Setter Property="Background" Value="#555"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#aaa"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Thumb.Style>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- Apply style only to vertical scrollbars -->
                <Style TargetType="ScrollBar" BasedOn="{StaticResource VerticalScrollBarStyle}">
                    <Setter Property="Orientation" Value="Vertical"/>
                </Style>
            </ScrollViewer.Resources>


            <!-- Your ItemsControl -->
            <ItemsControl x:Name="AppUsageDetailGrid" 
                  ItemsSource="{Binding AppUsageDetails}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#222"
                        Margin="10 5"
                        Padding="10"
                        CornerRadius="5">
                            <StackPanel>
                                <!-- Top Row: Window Title and Duration -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding WindowTitle}"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Grid.Column="0"/>

                                    <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        VerticalAlignment="Center">
                                        <TextBlock Text="Duration: "
                                           Foreground="Gray"
                                           FontSize="14"
                                           Margin="50 0 0 0"/>
                                        <TextBlock Text="{Binding Duration}"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Bottom Row: Start Time and End Time -->
                                <StackPanel Orientation="Horizontal"
                                    Margin="0,10,0,0">
                                    <TextBlock Text="Start Time: "
                                       Foreground="Gray"
                                       FontSize="14"/>
                                    <TextBlock Text="{Binding StartTime}"
                                       Foreground="Gray"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,15,0"/>
                                    <TextBlock Text="End Time: "
                                       Foreground="Gray"
                                       FontSize="14"/>
                                    <TextBlock Text="{Binding EndTime}"
                                       Foreground="Gray"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>


    </Grid>
</Page>
